	    </div>
	  </section>

	</section>

	<!-- Footer -->
	<section id="footer">
	  <div class="inner">
	    <h2 class="major">Contatti</h2>
	    <p>
	      {{ contacts }}
	    </p>
	    <p>
	      <iframe width="100%" height="300px" frameborder="0" style="border:0"
									src="https://www.google.com/maps/embed/v1/place?q=via%20fatebenefratelli%209%20cernusco&key=AIzaSyCn30Si0qTajtIwZk8ePLfZQ48F1JDe_HQ" allowfullscreen></iframe></p>
	    <form onsubmit="send(); return false">
	      <div class="fields">
		<div class="field">
		  <label for="name">Nome</label>
		  <input type="text" name="name" id="name" />
		</div>
		<div class="field">
		  <label for="email">E-mail</label>
		  <input type="email" name="email" id="email" />
		</div>
		<div class="field">
		  <label for="message">Messaggio</label>
		  <textarea name="message" id="message" rows="4"></textarea>
		</div>
	      </div>
	      <ul class="actions">
		<li><input type="submit" value="Invia messaggio" /></li>
	      </ul>
	    </form>

	    <script>      
	      emailjs.init("user_YKU5ZboEUiKgsYLRAZblS");

	      const Toast = Swal.mixin({
		  toast: true,
		  position: 'bottom-left',
		  showConfirmButton: false,
		  timer: 3000,
		  timerProgressBar: true,
		  didOpen: (toast) => {
		      toast.addEventListener('mouseenter', Swal.stopTimer)
		      toast.addEventListener('mouseleave', Swal.resumeTimer)
		  }
	      })
	      
	      function send() {
		  var templateParams = {
		      to_name: 'andrea.ciceri@autistici.org',
		      from_name: document.getElementById('name').value,
		      email: document.getElementById('email').value,
		      message: document.getElementById('message').value,
		  };

		  if (templateParams.from_name == '' || templateParams.email == '' || templateParams.message == '') {
		      Toast.fire({
			  icon: 'error',
			  title: 'Specificare tutti i campi'
		      });
		  }
		  else {
		      emailjs.send('service_iaw0kat', 'template_agl62yy', templateParams)
			  .then(function(response) {
			      Toast.fire({
				  icon: 'success',
				  title: 'Email inviata correttamente'
			      });
			  }, function(error) {
			      Toast.fire({
				  icon: 'error',
				  title: 'Email non inviata'
			      });
			  });
		  }
	      }
	    </script>
	    
	    <ul class="contact">
	      <li class="fa-home">
		{{ address }}
	      </li>
	      <li class="fa-phone">{{ telephone }}</li>
	      <li class="fa-envelope"><a href="mailto: {{ email }}">{{ email }}</a></li>
	      <!--<li class="fa-twitter"><a href="#">twitter.com/untitled-tld</a></li>-->
	      <li class="fa-facebook"><a href="#">{{ facebook }}</a></li>
	      <!--<li class="fa-instagram"><a href="#">instagram.com/untitled-tld</a></li>-->
	    </ul>
