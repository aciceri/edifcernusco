	<!-- Four -->
	<section id="four" class="wrapper alt style1">
	  <div class="inner">
	    <h2 class="major">Le nostre realizzazioni</h2>
	    <div class="content">
              <p>
		{{ realizations }}
	      </p>
	      <section class="features">
		{% for house in houses %}
		<article>
		  <a href="images/houses/{{ house[1] }}" class="image">
		    <img src="images/houses/{{ house[1] }}" alt="" /></a>
		  <h3 class="major">{{ house[0] }}</h3>
		  <!--<p></p>-->
